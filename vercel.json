{
  "version": 2,
  "builds": [
    {
      "src": "ai-proctor/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "ai-proctor/dist/assets/"
    },
    {
      "src": "/(.*)",
      "dest": "ai-proctor/dist/index.html"
    }
  ],
  "functions": {
    "backend/app.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
